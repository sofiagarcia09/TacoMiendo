<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlatillosFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:stretchColumns="0,1"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_camarones"
                        android:layout_width="155dp"
                        android:layout_height="180dp"
                        android:accessibilityLiveRegion="assertive"
                        android:background="@drawable/camarones"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#FF9E80">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="$ 5.0 "
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Camarones Tismados"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_rosca"
                        android:layout_width="155dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="3dp"
                        android:accessibilityLiveRegion="assertive"
                        android:background="@drawable/rosca"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#FF9E80">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="$ 3.2 "
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Rosca Herborea"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_sushi"
                        android:layout_width="155dp"
                        android:layout_height="180dp"
                        android:accessibilityLiveRegion="assertive"
                        android:background="@drawable/sushi"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#FF9E80">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="$ 12.0 "
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Sushi Extremo"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_sandwich"
                        android:layout_width="155dp"
                        android:layout_height="180dp"
                        android:accessibilityLiveRegion="assertive"
                        android:background="@drawable/sandwich"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#FF9E80">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="$ 4.0 "
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Sandwich Deli"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_lomo"
                        android:layout_width="155dp"
                        android:layout_height="180dp"
                        android:accessibilityLiveRegion="assertive"
                        android:background="@drawable/lomo_cerdo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <FrameLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="#FF9E80">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="$ 34.0 "
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Lomo de Cerdo Austral"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:baselineAligned="false"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>

</FrameLayout>